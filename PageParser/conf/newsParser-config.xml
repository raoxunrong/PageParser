<?xml version="1.0" encoding="utf-8"?>
<parserNews-conf>
	<!-- notice the value of all tag should be lowercase-->
	<parserTag>
		<ingoreTag>
			<tag>script</tag>
			<tag>noscript</tag>
			<tag>style</tag>
			<tag>iframe</tag>
			<tag>comment</tag>
			<tag>select</tag>
			<tag>meta</tag>
			<tag>img</tag>
			<tag>object</tag>
		</ingoreTag>
		<containerTag>
			<tag>table</tag>
			<tag>div</tag>
		</containerTag>
		<linkTag>
			<tag>a</tag>
			<tag>anchor</tag>
		</linkTag>
		<titleTag>
			<tag>title</tag>
		</titleTag>
		<branchTag>
			<tag>p</tag>
			<tag>li</tag>
			<tag>br</tag>
		</branchTag>
		<decoratedTag>
			<tag>strong</tag>
			<tag>font</tag>
			<tag>color</tag>
		</decoratedTag>
	</parserTag>
	<markTag>
		<channelTag>
			<tag>></tag>
			<tag>>></tag>
			<tag>-</tag>
			<tag>→</tag>
			<tag>-></tag>
			<tag>\</tag>
		</channelTag>
		<date-regex>
			<regex>\d{1,2}月\d{1,2}日\d{1,2}:\d{2}</regex>
			<regex>\d{4}(-|——)\d{1,2}(-|——)\d{1,2}\d{2}:\d{2}</regex>
			<regex>\d{4}(-|——)\d{1,2}(-|——)\d{1,2}\d{2}.\d{2}</regex>
			<regex>\d{2}/\d{2}\d{2}:\d{2}</regex>
			<regex>\d{4}/\d{2}/\d{2}</regex>
		</date-regex>
		<origin-regex>
			<regex>来源(：|:)\S{1,}</regex>
			<regex>\S{1,6}(报)\S{0,6}$</regex>
			<regex>\S{1,6}(杂志)\S{0,6}$</regex>
			<regex>\S{1,6}(网)(?!友)\S{0,6}$</regex>
			<regex>\S{1,6}(社)$</regex>
			<regex>\S{1,}(专稿)</regex>
			<regex>新浪</regex>
			<regex>新华网</regex>
			<regex>和讯</regex>
			<regex>搜狐</regex>
			<regex>雅虎</regex>
			<regex>网易</regex>
			<regex>腾讯</regex>
			<regex>劲体育</regex>
			<regex>南方周末</regex>
			<regex>^凤凰\S{1,4}</regex>
			<regex>半月谈</regex>
			<regex>央视</regex>
			<regex>文摘</regex>
			<regex>书摘</regex>
			<regex>经济半小时</regex>
			<regex>青年周末</regex>
			<regex>\S{1,}周刊</regex>
			<regex>\S{1,}在线</regex>
			<regex>\S{1,}论坛</regex>
			<regex>^《\S{1,}》$</regex>
		</origin-regex>
		<filterStr>
			<str>null</str>
			<str>相关报道：</str>
			<str>相关新闻：</str>
			<str>相关阅读：</str>
			<str>此前报道：</str>
			<str>精彩推荐：</str>
			<str>相关链接：</str>
			<str>分享到:</str>
			<str>分享到：</str>
			<str>下一页</str>
		</filterStr>
	</markTag>
	<threshold>
		<contentThreshold>0.7</contentThreshold>
		<contentMinLength>150</contentMinLength>
		<minContentBetweenLink>20</minContentBetweenLink>
	</threshold>
	<site name="tom">
		<ignoreTag>
			<tag>div</tag>
			<attribute>class</attribute>
			<value>comment</value>
		</ignoreTag>
	</site>
</parserNews-conf>